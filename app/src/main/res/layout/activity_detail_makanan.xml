<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailMakanan">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:text="Nama Makanan"
        android:textSize="20sp"
        android:fontFamily="@font/poppinssemibold"
        android:textStyle="bold"
        android:id="@+id/tvNamaMakananDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="10dp"
        android:text="Deskripsi Makanan"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsmedium"
        android:id="@+id/tvDeskripsiMakananDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="10dp"
        android:text="Harga Makanan"
        android:textSize="15sp"
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/tvHargaMakananDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/gambarMakananDetail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="11dp"
        android:layout_marginStart="10dp" />
</LinearLayout>
